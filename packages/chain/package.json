{
  "name": "abortcontroller-chain",
  "version": "1.0.3",
  "description": "Simple utility to chain an AbortController to one or more AbortSignals.",
  "keywords": [
    "signal",
    "abortsignal",
    "abortcontroller",
    "context",
    "chain"
  ],
  "author": "Kyle Johnson",
  "license": "MIT",
  "homepage": "https://github.com/kyle-johnson/abortcontroller-utils/tree/main/packages/chain",
  "repository": {
    "type": "git",
    "url": "https://github.com/kyle-johnson/abortcontroller-utils.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "test": "jest",
    "test:web": "jest --env=jsdom",
    "test:ci": "jest --coverage --ci",
    "build": "rm -rf dist && tsc -p tsconfig.dist.json",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "jest": {
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {}
    }
  },
  "devDependencies": {
    "@tsconfig/node14": "1.0.3",
    "@types/jest": "29.0.0",
    "@types/node": "16.11.58",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "@typescript-eslint/parser": "5.37.0",
    "eslint": "8.23.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.0.4",
    "eslint-plugin-unicorn": "43.0.2",
    "jest": "29.0.2",
    "jest-environment-jsdom": "29.0.2",
    "prettier": "2.7.1",
    "ts-jest": "28.0.8",
    "typescript": "4.8.3"
  }
}
