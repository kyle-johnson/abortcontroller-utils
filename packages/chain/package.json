{
  "name": "abortcontroller-chain",
  "version": "2.0.0",
  "description": "Simple utility to chain an AbortController to one or more AbortSignals.",
  "keywords": [
    "signal",
    "abortsignal",
    "abortcontroller",
    "context",
    "chain"
  ],
  "author": "Kyle Johnson",
  "license": "MIT",
  "homepage": "https://github.com/kyle-johnson/abortcontroller-utils/tree/main/packages/chain",
  "repository": {
    "type": "git",
    "url": "https://github.com/kyle-johnson/abortcontroller-utils.git"
  },
  "exports": {
    ".": {
      "import": "./dist-esm/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "dist-esm"
  ],
  "scripts": {
    "type-check": "scripty",
    "lint": "scripty",
    "test": "scripty",
    "test:web": "scripty",
    "test:ci": "scripty",
    "build:esm": "scripty",
    "build:cjs": "scripty",
    "build": "SCRIPTY_PARALLEL=true scripty",
    "format": "scripty",
    "format:check": "scripty"
  },
  "config": {
    "scripty": {
      "logLevel": "warn",
      "path": "../../scripts"
    }
  },
  "jest": {
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "preset": "ts-jest"
  },
  "devDependencies": {
    "@tsconfig/node14": "1.0.3",
    "@types/jest": "29.2.1",
    "@types/node": "16.18.3",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.42.0",
    "eslint": "8.27.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.1.3",
    "eslint-plugin-unicorn": "44.0.2",
    "jest": "29.2.2",
    "jest-environment-jsdom": "29.2.2",
    "prettier": "2.7.1",
    "scripty": "2.1.1",
    "ts-jest": "29.0.3",
    "typescript": "4.8.4"
  }
}
